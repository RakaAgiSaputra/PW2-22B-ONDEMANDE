generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Wishlist {
  id          Int      @id @default(autoincrement())
  destinations String
  address      String
  ratings      Int
  plan         String
  createdAt    DateTime @default(now())
}
